{
  "root": true,
  "env": {
    "jest": true
  },
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "airbnb/hooks",
    "plugin:typescript-sort-keys/recommended",
    "plugin:jest/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "ts": true
    },
    "ecmaVersion": 2021,
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "jest",
    "typescript-sort-keys",
    "sort-keys-fix"
  ],
  "rules": {
    "react/function-component-definition": "off",
    "import/prefer-default-export": "off",
    "@typescript-eslint/lines-between-class-members": [
      "error",
      "always",
      {
        "exceptAfterSingleLine": true
      }
    ],
    // it's usual MUI practice to define uppercase properties
    "@typescript-eslint/no-shadow": "off",
    // airbnb config leads to this typescript issue - https://stackoverflow.com/a/59268871
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "": "never",
        "js": "never",
        "jsx": "never",
        "mjs": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "jest/expect-expect": "off",
    "jest/no-standalone-expect": [
      "error",
      {
        "additionalTestBlockFunctions": [
          "When",
          "Then"
        ]
      }
    ],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "next": [
          "return",
          "function",
          "export"
        ],
        "prev": "*"
      },
      {
        "blankLine": "any",
        "next": [
          "export"
        ],
        "prev": [
          "export"
        ]
      },
      {
        "blankLine": "always",
        "next": "*",
        "prev": "import"
      },
      {
        "blankLine": "never",
        "next": "import",
        "prev": "import"
      },
      {
        "blankLine": "always",
        "next": "*",
        "prev": [
          "const",
          "let",
          "var"
        ]
      },
      {
        "blankLine": "any",
        "next": [
          "const",
          "let",
          "var"
        ],
        "prev": [
          "const",
          "let",
          "var"
        ]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "signleQuote": true
      }
    ],
    // this rule react logs a console error if a key is not set
    "react/jsx-key": [
      "error"
    ],
    // prop spreading is very common and often unavoidable
    "react/jsx-props-no-spreading": "off",
    // causes fall positives with typescript props interfaces
    "react/prop-types": "off",
    // react is now a global
    "react/react-in-jsx-scope": "off",
    // this rule causes fall positives with typescript props interfaces
    "react/require-default-props": "off",
    // allows sort-keys rule to be auto-fixed with --fix
    "sort-keys-fix/sort-keys-fix": "error"
  },
  "settings": {
    "import/extensions": [
      ".js",
      ".jsx",
      ".ts",
      ".tsx",
      ".json"
    ],
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx",
          ".json"
        ]
      }
    }
  }
}
